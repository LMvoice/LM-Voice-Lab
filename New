  const ttsPlayerWrap = document.getElementById('ttsPlayerWrap');
  const ttsMeta = document.getElementById('ttsMeta');
  const status = document.getElementById('status');
  const downloadBtn = document.getElementById('downloadBtn');
  const copyTextBtn = document.getElementById('copyTextBtn');

  // --- Load available voices
  let voices = [];
  function loadVoices(){
    voices = speechSynthesis.getVoices().sort((a,b)=>a.name.localeCompare(b.name));
    voiceSelect.innerHTML = '';
    voices.forEach((v,i)=>{
      const opt = document.createElement('option');
      opt.value = i;
      opt.textContent = `${v.name} — ${v.lang}${v.default ? ' (default)':''}`;
      voiceSelect.appendChild(opt);
    });
    if(voices.length===0){
      const opt = document.createElement('option'); opt.textContent='(No voices found)'; voiceSelect.appendChild(opt);
    }
  }
  // chrome fires onvoiceschanged
  speechSynthesis.onvoiceschanged = loadVoices;
  // try initial load
  setTimeout(loadVoices
